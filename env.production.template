# EasyPay Payment Gateway - Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values
# DO NOT COMMIT THE ACTUAL .env.production FILE TO VERSION CONTROL

# Application Settings
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=${SECRET_KEY}
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=${DATABASE_URL}
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=${REDIS_URL}
REDIS_POOL_SIZE=20
REDIS_MAX_CONNECTIONS=100
REDIS_RETRY_ON_TIMEOUT=true

# Authorize.net Configuration
AUTHORIZE_NET_API_LOGIN_ID=${AUTHORIZE_NET_API_LOGIN_ID}
AUTHORIZE_NET_TRANSACTION_KEY=${AUTHORIZE_NET_TRANSACTION_KEY}
AUTHORIZE_NET_SANDBOX=false
AUTHORIZE_NET_WEBHOOK_SECRET=${AUTHORIZE_NET_WEBHOOK_SECRET}

# Security Settings
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["https://yourdomain.com", "https://api.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/easypay.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=200

# Webhook Settings
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=5
WEBHOOK_RETRY_DELAY=5
WEBHOOK_MAX_RETRIES=10

# Payment Settings
PAYMENT_TIMEOUT=30
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_RETRY_DELAY=5
PAYMENT_MAX_AMOUNT=100000.00
PAYMENT_MIN_AMOUNT=0.01

# Notification Settings
NOTIFICATION_EMAIL_FROM=noreply@yourdomain.com
NOTIFICATION_SMTP_HOST=${SMTP_HOST}
NOTIFICATION_SMTP_PORT=${SMTP_PORT}
NOTIFICATION_SMTP_USER=${SMTP_USER}
NOTIFICATION_SMTP_PASSWORD=${SMTP_PASSWORD}
NOTIFICATION_SMTP_TLS=true

# SSL/TLS Settings
SSL_CERT_PATH=/ssl/cert.pem
SSL_KEY_PATH=/ssl/key.pem
SSL_ENABLED=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
BACKUP_S3_ACCESS_KEY=${BACKUP_S3_ACCESS_KEY}
BACKUP_S3_SECRET_KEY=${BACKUP_S3_SECRET_KEY}

# Performance Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CONNECTION_POOL_SIZE=20
MAX_CONCURRENT_REQUESTS=100

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Circuit Breaker Settings
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_EXPECTED_EXCEPTION=Exception

# Database Migration Settings
MIGRATION_ENABLED=true
MIGRATION_AUTO_RUN=false
MIGRATION_BACKUP_BEFORE_RUN=true

# Grafana Settings
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}
GRAFANA_ENABLED=true

# Elasticsearch Settings
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_INDEX_PREFIX=easypay

# Kong Settings
KONG_ENABLED=true
KONG_ADMIN_URL=http://kong:8001
KONG_PROXY_URL=http://kong:8000

# Production-specific Settings
PRODUCTION_MODE=true
PERFORMANCE_MONITORING=true
ERROR_REPORTING=true
AUDIT_LOGGING=true
SECURITY_SCANNING=true
